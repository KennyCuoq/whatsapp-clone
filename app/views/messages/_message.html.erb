<% if message.previous_message_sent_on_different_day? %>
  <div class="datestamp"><span><%= message.date_stamp %></span></div>
<% end %>
<div class="message-wrapper <%= 'sent' if was_sent_by_user %>">
  <div class="bubble <%= 'sent' if was_sent_by_user %> <%= 'extra-top-space' if message.preceded_by_message_from_other_user? %>">
    <span>
      <%= message.content %>
    </span>
    <span class="timestamp"><%= message.time %>
      <% if was_sent_by_user %>
        <i class="fas fa-check-double check-small <%= 'blue' if message.seen %>"></i>
      <% end %>
    </span>
    <% if message.last_of_series? %>
      <div class="bubble-arrow <%= 'sent' if was_sent_by_user %>"></div>
    <% end %>
  </div>
</div>
