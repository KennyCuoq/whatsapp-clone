<div class="container" id="container-login">
  <div id="home-login">
    <div>
      <%= image_tag "logo.png", id: "logo-login" %>
      <h4>Chat, call and videochat your friends for free</h4>
    </div>
    <div id="form-login">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :username,
                      required: false,
                      label: false,
                      placeholder: "Username",
                      input_html: { autocomplete: "username" }%>
          <%= f.input :password,
                      required: false,
                      label: false,
                      placeholder: "•••••••",
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, input_html: {class: "transparent-input" }, as: :boolean if devise_mapping.rememberable?%>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn-devise" %>
        </div>
      <% end %>
      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

